{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "AhorroLand.Api",
      "Environment": "Development"
    }
  },
  "HtmlFileLog": {
    "LogDirectory": "logs",
    "FileNamePrefix": "ahorroland-dev",
    "RollingInterval": "Day",
    "RetainedFileCountLimit": 3,
    "FileSizeLimitBytes": 5242880,
    "RollOnFileSizeLimit": true,
    "CleanupAfterDays": 7,
    "CleanOnStartup": true,
    "PageTitle": "AhorroLand DEV - Logs del Sistema",
    "IncludeDatabaseOperations": true,
    "IncludeWarnings": true,
    "IncludeErrors": true
  },
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "EmailSettings": {
    "SmtpServer": "smtp-relay.brevo.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "FromEmail": "no-reply@sergioizq.com",
    "FromName": "AhorroLand - No Reply"
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1"
    }
  }
}
